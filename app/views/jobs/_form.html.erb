<head>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <style>
    body{
    background: linear-gradient(45deg, #cd5eed45, transparent);
    }
		
    .contact-form{
        background: #fff;
        margin-bottom: 8%;
        width: 70%;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
    .contact-form .form-control{
        border-radius:5px;
    }
    .contact-image{
        text-align: center;
    }
    .contact-image img{
      background-color: #fff;
        border-radius: 6rem;
        width: 11%;
        margin-top: -3%;
    }
    .contact-form form{
        padding: 150px 30px 100px 30px;
    }
    .contact-form form .row{
        margin-bottom: -7%;
    }
    .contact-form h3{
        margin-bottom: 5%;
        margin-top: -10%;
        text-align: center;
        color: #670BFF;
    }
    .contact-form .btnContact {
        width: 25%;
        border: none;
        border-radius: 1rem;
        padding: 1.5%;
        background: #dc3545;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
    }
    .btnContactSubmit
    {
        width: 50%;
        border-radius: 1rem;
        padding: 1.5%;
        color: #fff;
        background-color: #0062cc;
        border: none;
        cursor: pointer;
    }
  </style>
</head>

<div class="container contact-form">
  <div class="contact-image">
    <img src="https://cdn-icons-png.flaticon.com/512/6700/6700002.png" alt="rocket_contact" />
  </div>
  <%= simple_form_for(job) do |f| %>
    <h3>Jobs Forms</h3>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :locations %>
        </div>
        <div class="form-group">
          <%= f.label :employment_type %>
          <%= f.select(:employment_type, Job::EMPLOYEMENT_TYPE, {}, {class: 'form-select', style: 'background-color: white;'}) %>
        </div>
        <div class="form-group">
          <%= f.input :expiry_date, html5: true, input_html: {style: 'background-color: white;'} %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :title %>
        </div>
        <div class="form-group">
          <%= f.input :description, input_html: {style: 'height: 125px;'} %>
        </div>
      </div>
      <div class="col-12 text-center mt-3">
        <div class="form-group">
          <%= f.submit nil, class: 'btn-flat' %>
        </div>
      </div>
  <% end %>
</div>
