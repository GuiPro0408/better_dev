<div class="banner" style="background-color: #21201E;">
	<div class="container d-flex">
		<div class="container d-flex flex-column justify-content-center gap-3">
			<h1 class="title">
				<b>Better </b>
				Dev
				<br>
				<span data-controller="typed-js" class = "fs-3"></span>
			</h1>
			<p>
				How work should work
			</p>
			<div>
				<a class="btn-banner" href="<%= jobs_path %>"><i class="fa-solid fa-arrow-right-long me-2"></i>Discover Jobs</a>
			</div>
		</div>
		<div class="container d-flex justify-content-end">
			<%= image_tag("illustration_1.svg", width: "450px") %>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
		<h1 class = "text-center my-5 fw-bold">SOME OF OUR TALENTS</h1>
			<section id = "dev-section" class = "mx-auto mb-5">
				<div class="swiper mySwiper container">
					<div class="swiper-wrapper content">
						<% @developers.each do |dev| %>
						<div class="swiper-slide card-dev">
							<div class="card-content">
								<div class="image">
									<% if dev.image_url.present? %>
										<img src="<%= dev.image_url %>" alt="">
									<% else %>
										<img src="https://cdn3.iconfinder.com/data/icons/vector-icons-6/96/256-512.png" alt="">
									<% end %>
								</div>
								<div class="media-icons">
									<a href="<%= dev.linkedin_url %>"><i class="fa-brands fa-linkedin-in"></i></a>
									<a href="<%= dev.website_url %>"><i class="fas fa-globe"></i></a>
								</div>

								<% if dev.developer == true && dev.type_of_developers.present? %>
									<% type_of_developers = dev.type_of_developers %>
								<% else %>
									<% type_of_developers = "Web Developer" %>
								<% end %>

								<div class="name-profession">
									<span class="name"><%= dev.nickname %></span>
									<span class="profession"><%= type_of_developers %></span>
								</div>
								<div class="button">
									<%= link_to("About Me", user_show_path(dev), class: 'aboutMe') %>
								</div>
							</div>
						</div>
						<% end %>
					</div>
				</div>
				<div class="swiper-button-next"></div>
				<div class="swiper-button-prev"></div>
				<div class="swiper-pagination"></div>
			</section>
		</div>
	</div>
</div>
