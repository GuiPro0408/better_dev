<h1 class = "text-center my-5 fw-bold">RECENT JOBS </h1>
<section id = "dev-section" class = "mx-auto mb-5">
	<div class="swiper mySwiper1 container">
		<div class="swiper-wrapper content py-5">
			<% @jobs.each do |job| %>
			<div class="swiper-slide p-3 shadow card-job">
				<div class="card-content">
					<div class="card-title mb-4">
						<p class="heading">
							<%= job.title %>
						</p>
					</div>
					<p class="text-muted">
						<%= truncate job.description, length: 100 %>
					</p>
					<p class="text-muted mt-4">
						<%= image_tag job.user.image_url, width: "30px", class: "rounded-circle" %>
						<%= job.user.nickname %>
					</p>
					<div class="button mt-4">
						<%= link_to("Read More", job_path(job), class: 'aboutMe') %>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
	<div class="swiper-button-next"></div>
	<div class="swiper-button-prev"></div>
	<div class="swiper-pagination"></div>
</section>
