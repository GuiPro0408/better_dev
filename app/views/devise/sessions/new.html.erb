<div class="container">
	<div class="row">
		<div class="col-md-12">
		<h1 class="design-heading text-center"> <span class="highlight highlight-underline" style="background-color:#ff7eff;"><span class="highlight-word">Log in<span class="highlight-border" style="background-color:#ff7eff;"></span></span></h1>
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
				<div class="form-inputs">
					<%= f.input :email,
											required: false,
											autofocus: true,
											input_html: { autocomplete: "email" } %>
					<%= f.input :password,
											required: false,
											input_html: { autocomplete: "current-password" } %>
					<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
				</div>

				<div class="form-actions">
					<%= f.submit "Log in", :class => "btn btn-flat"   %>
				</div>
<% end %>
		</div>
	</div>
</div>




<%= render "devise/shared/links" %>
